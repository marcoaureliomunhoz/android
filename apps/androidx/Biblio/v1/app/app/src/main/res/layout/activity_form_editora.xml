<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.FormEditoraActivity">

    <TextView
        android:id="@+id/textViewNomeEditora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNomeEditora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textViewNomeEditora"
        app:layout_constraintStart_toStartOf="@+id/textViewNomeEditora"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeEditora" />

    <TextView
        android:id="@+id/textViewTelefoneEditora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Telefone"
        app:layout_constraintEnd_toEndOf="@+id/editTextNomeEditora"
        app:layout_constraintStart_toStartOf="@+id/editTextNomeEditora"
        app:layout_constraintTop_toBottomOf="@+id/editTextNomeEditora" />

    <EditText
        android:id="@+id/editTextTelefoneEditora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/textViewTelefoneEditora"
        app:layout_constraintStart_toStartOf="@+id/textViewTelefoneEditora"
        app:layout_constraintTop_toBottomOf="@+id/textViewTelefoneEditora" />

</androidx.constraintlayout.widget.ConstraintLayout>