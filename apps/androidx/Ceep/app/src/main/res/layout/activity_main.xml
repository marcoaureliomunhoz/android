<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaNotas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F5F5F5"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnNovaNota"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/nota_item" />

    <Button
        android:id="@+id/btnNovaNota"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/inserir_uma_nota"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/listaNotas"
        app:layout_constraintStart_toStartOf="@+id/listaNotas"
        app:layout_constraintTop_toBottomOf="@+id/listaNotas" />

</androidx.constraintlayout.widget.ConstraintLayout>