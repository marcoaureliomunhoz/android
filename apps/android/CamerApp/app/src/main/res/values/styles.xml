    <style name="AppToolbarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorWindowTitle</item>
    </style>

